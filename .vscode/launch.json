{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ReceiptHealth Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-receipthealth",
      "program": "${workspaceFolder}/ReceiptHealth/bin/Debug/net8.0/ReceiptHealth.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ReceiptHealth",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5100"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "CopilotWebApp Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-copilotwebapp",
      "program": "${workspaceFolder}/CopilotWebApp/bin/Debug/net8.0/CopilotWebApp.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CopilotWebApp",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "ReceiptHealth Full Stack (Backend + Frontend)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "start-receipthealth-fullstack",
      "program": "${workspaceFolder}/ReceiptHealth/bin/Debug/net8.0/ReceiptHealth.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ReceiptHealth",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "http://localhost:5173"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5100"
      }
    }
  ]
}
