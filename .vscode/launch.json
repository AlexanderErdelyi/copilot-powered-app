{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sanitas Mind Full Stack (React + API)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "start-receipthealth-fullstack",
            "program": "${workspaceFolder}/ReceiptHealth/bin/Debug/net8.0/ReceiptHealth.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ReceiptHealth",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start http://localhost:5173"
                },
                "osx": {
                    "command": "open",
                    "args": "http://localhost:5173"
                },
                "linux": {
                    "command": "xdg-open",
                    "args": "http://localhost:5173"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5100"
            }
        },
        {
            "name": "Sanitas Mind (No Debug - Fast HMR)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "start-receipthealth-fullstack",
            "program": "${workspaceFolder}/ReceiptHealth/bin/Debug/net8.0/ReceiptHealth.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ReceiptHealth",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start http://localhost:5173"
                },
                "osx": {
                    "command": "open",
                    "args": "http://localhost:5173"
                },
                "linux": {
                    "command": "xdg-open",
                    "args": "http://localhost:5173"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5100"
            },
            "enableStepFiltering": false,
            "justMyCode": false,
            "suppressJITOptimizations": false
        },
        {
            "name": "ReceiptHealth Backend Only",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-receipthealth",
            "program": "${workspaceFolder}/ReceiptHealth/bin/Debug/net8.0/ReceiptHealth.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ReceiptHealth",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5100"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "CopilotWebApp Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-copilotwebapp",
            "program": "${workspaceFolder}/CopilotWebApp/bin/Debug/net8.0/CopilotWebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CopilotWebApp",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}